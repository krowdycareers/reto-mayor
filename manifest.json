{
  "name": "Scraping-AbrahamBerrospiCasano",
  "description": "Obtén información actualizada sobre salarios en diferentes ciudades de México con nuestra extensión de scraping.",
  "manifest_version": 3,
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "tabs", "storage"],
  "background": {
    "service_worker": "./background.js"
  },
  "action": {
    "default_popup": "./popup/index.html"
  },
  "icons": {
    "32": "./images/icon32.png",
    "64": "./images/icon64.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.occ.com.mx/*"],
      "js": ["./contentscript.js"]
    }
  ]
}
